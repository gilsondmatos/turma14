package biteBank;

public class Conta {

	double saldo; // Nasce desce tipo e morreu desce tipo //double tem perda de precisão
	int agencia;
	int numero;
	String titular;

	// Deposita
	public void deposita(double valor) {

		saldo += valor;
	}
	//Saca
	public boolean saca(double valor) {

		if (this.saldo >= valor) {
			this.saldo -= valor;
			return true;
		} else {
			return false;
		}
	}
	
	public boolean transfere (double valor, Conta destino){
		
		if(this.saldo >= valor) {
			this.saldo -= valor;
			destino.deposita(valor);
			return true;
		}
		return false;
	}
}
		
	
	
	


