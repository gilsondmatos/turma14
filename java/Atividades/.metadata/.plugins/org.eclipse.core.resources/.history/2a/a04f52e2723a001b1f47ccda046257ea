package LacoRepeticao;

import java.io.IOException;
import java.util.Scanner;

public class SomaImpares {

	public static void main(String[] args) throws Exception {

		Scanner entrada = new Scanner(System.in);

		/*
		 * 2- Desenvolver um sistema que efetue a soma de todos os números ímpares que
		 * são múltiplos de três e que se encontram no conjunto dos números de 1 até
		 * 500.
		 */

		int soma = 0;

		for (int numero = 1; numero < 500; numero++) {

			if (numero % 2 != 0) {

				if (numero % 3 == 0) {
					soma += numero;
				}
			}
		}
		
		System.out.println("Resultado da soma é: " + soma);
		System.out.print("Digite uma tecla para finalizar");
		System.in.read();
	}
}
